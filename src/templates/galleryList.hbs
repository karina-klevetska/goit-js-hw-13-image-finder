<ul class="gallery">
    {{#each this}}
    <li>
        <div class="photo-card">
            <img class="image" src={{webformatURL}} data-source={{largeImageURL}} alt="{{tags}}" title="Open full preview"/>
            <div class="stats">
                <p class="stats-item">
                    <i class="material-icons">thumb_up</i>
                    {{likes}}
                </p>
                <p class="stats-item">
                    <i class="material-icons">visibility</i>
                    {{views}}
                </p>
                <p class="stats-item">
                    <i class="material-icons">comment</i>
                    {{comments}}
                </p>
                <p class="stats-item">
                    <i class="material-icons">cloud_download</i>
                    {{downloads}}
                </p>
            </div>
            <a class="full-img" href="{{largeImageURL}}" target="_blank" rel="noopener noreferrer">Open full in new tab</a>
        </div>
    </li>
    {{/each}}
</ul>